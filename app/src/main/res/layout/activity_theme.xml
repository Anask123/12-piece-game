<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".theme">

    <Button
        android:id="@+id/btnnclick"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/next"
        android:onClick="nclick" />

    <Button
        android:id="@+id/btnpclick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/pre"
        android:onClick="pclick" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_below="@+id/animation_view2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:shadowColor="#FC0C0C0C"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:text="SELECT THEME"
        android:textColor="#FDBF39"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="205dp"
        android:layout_height="363dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_toStartOf="@+id/btnnclick"
        android:layout_toLeftOf="@+id/btnnclick"
        android:layout_toEndOf="@+id/btnpclick"
        android:layout_toRightOf="@+id/btnpclick"
        android:onClick="imgeview"
        app:srcCompat="@drawable/theme1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="138dp"
        android:onClick="backclick"
        android:text="back" />

</RelativeLayout>